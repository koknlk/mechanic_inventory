@model IEnumerable<front_end_mvc_dot_net_framework.Models.Tools>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   <a href="@Url.Action("AddOrUpdate", "MechanicsTools")" class="btn btn-default">Add Tools</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.partName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.partType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.partName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.partType)
        </td>
        <td>
            <a href="@Url.Action("AddOrUpdate", "MechanicsTools", new { id = item.id})" class="btn btn-default">Update</a>
            <a class="btn btn-default" onclick="Remove()">Remove</a>
        </td>
    </tr>
}

</table>


<script>
    function Remove() {
        confirm("Mechanics Tool", "Are you sure?", () => {
            window.location.href = '@Url.Action("Remove", "MechanicsTools")/' + id;
        }, null)
    }
</script>